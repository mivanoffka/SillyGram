{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run example",
            "type": "shell",
            "command": "${command:osPlatform}",
            "args": [],
            "windows": {
                "command": "call ${workspaceFolder}\\.venv\\Scripts\\activate && echo Launching bot... && run_example.bat"
            },
            "linux": {
                "command": "source ${workspaceFolder}/.venv/bin/activate && echo 'Launching bot...' && sh run_example.sh"
            },
            "osx": {
                "command": "source ${workspaceFolder}/.venv/bin/activate && echo 'Launching bot...' && sh run_example.sh"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}
